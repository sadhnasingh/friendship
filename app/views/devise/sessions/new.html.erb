
<html>
<body>

<center> <fieldset>
  <legend><h2>Log in</h2></legend></fieldset>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table border="3px" width="30%">
  <td><br>
    <div class="field">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.label :email %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
     
      <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
    </div><br>
    
    <div class="field">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.label :password%>
      <%= f.password_field :password, autocomplete: "off" %>
    </div><br>
    
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%><br>

    <center><div class="actions">
      <%= f.submit "Log in", class:"btn btn-success"%>
    </div></center>
  <% end %>
<center><h3>OR</h3>
<%= link_to "Login With Facebook",  "/auth/facebook", class:"bn btn-success" %><br>or
<%= link_to "Login With LinkedIn",  "/auth/linkedin", class:"bn btn-success" %><br>or
<%= link_to "Login With Google",  "/auth/google_oauth2", class:"bn btn-success"%><br>or
<%= link_to "Login With Twitter",  "/auth/twitter", class:"bn btn-success"%><br>
<%= render "devise/shared/links" %>
</center>
</td>
</table>
</center>
</body>
</html>

